<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitspilani.library.infoBits.LibRes"
    android:id="@+id/drawer_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/nav_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:logo="@mipmap/libr"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:fitsSystemWindows="true"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </android.support.v7.widget.Toolbar>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/libricons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/nav_toolbar"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="#e0dfeb"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBarRes"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:indeterminate="false"
                android:progressTint="@color/colorPrimaryDark"
                android:progressTintMode="src_in"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eb"
                tools:targetApi="lollipop" />

            <ImageButton
                android:id="@+id/opac"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="#e0dfeb"
                android:onClick="onClickOPAC"
                android:scaleType="centerCrop"
                android:src="@mipmap/opac"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/od"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="#e0dfeb"
                android:clickable="true"
                android:onClick="onClickOD"
                android:scaleType="fitXY"
                android:src="@drawable/odxii"
                app:layout_constraintBottom_toBottomOf="@+id/opac"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/opac" />

            <ImageButton
                android:id="@+id/eb"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="#e0dfeb"
                android:onClick="onClickEB"
                android:scaleType="centerCrop"
                android:src="@drawable/ebxii"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/opac" />

            <ImageButton
                android:id="@+id/ir"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:adjustViewBounds="false"
                android:background="#e0dfeb"
                android:cropToPadding="false"
                android:onClick="onClickIR"
                android:scaleType="fitXY"
                android:src="@drawable/irxii"
                app:layout_constraintBottom_toBottomOf="@+id/eb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/eb" />

        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navigation_drawer_header"
        >
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
